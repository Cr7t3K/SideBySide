<div id="carouselExampleIndicators" class="carousel slide col-lg-7" data-ride="carousel" data-interval="50000">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        {% if projects[0]|length + projects[1]|length > 1 %}
            {% for i in 1 .. (projects[0]|length) + (projects[1]|length)- 1 %}
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            {% endfor %}
        {% endif %}
    </ol>
    <div class="carousel-inner col-11">
        {% if projects[0]|length > 0 %}

            <div class="carousel-item active">
                <a href="/Project/show/{{ projects[0][0].id }}" class="user-project-card aProfilName">
                    <div class="user-project-card-image-container">
                        <div class="container-banner-project">
                            <img src="/assets/images/icons/monarchy.png" class="banner-project-crown">
                            <img src="{{ projects[0][0].banner_image }}" class="banner-project-image"
                                 alt="Image du projet">
                        </div>
                        <h4 class="project-title"><strong>{{ projects[0][0].title|capitalize }}</strong></h4>
                    </div>
                    <div class="user-project-card-content">
                        <p>{{ projects[0][0].description }}</p>
                    </div>
                </a>
            </div>
        {% else %}
            <div class="carousel-item active">
                <a href="/Project/show/{{ projects[1][0].id }}" class="user-project-card aProfilName">
                    <div class="user-project-card-image-container">
                        <div class="container-banner-project">
                            <img src="/assets/images/sbs_white.png" class="banner-project-sbs">
                            <img src="{{ projects[1][0].banner_image }}" class="banner-project-image"
                                 alt="Image du projet">
                        </div>
                        <h4 class="project-title"><strong>{{ projects[1][0].title|capitalize }}</strong></h4>
                    </div>
                    <div class="user-project-card-content">
                        <p>{{ projects[1][0].description }}</p>
                    </div>
                </a>
            </div>
        {% endif %}
        {% if projects[0]|length > 1 %}
            {% for i in 1 .. projects[0]|length -1 %}
                <div class="carousel-item">
                    <a href="/Project/show/{{ projects[0][i].id }}" class="user-project-card aProfilName">
                        <div class="user-project-card-image-container">
                            <div class="container-banner-project">
                                <img src="/assets/images/icons/monarchy.png" class="banner-project-crown">
                                <img src="{{ projects[0][i].banner_image }}" class="banner-project-image"
                                     alt="Image du projet">
                            </div>
                            <h4 class="project-title"><strong>{{ projects[0][i].title|capitalize }}</strong></h4>
                        </div>
                        <div class="user-project-card-content">
                            <p>{{ projects[0][i].description }}</p>
                        </div>
                    </a>
                </div>
            {% endfor %}
        {% endif %}
        {% if projects[0]|length != 0 %}
            {% if projects[1]|length > 0 %}
                {% for i in 0 .. projects[1]|length -1 %}
                    <div class="carousel-item">
                        <a href="/Project/show/{{ projects[1][i].id }}" class="user-project-card aProfilName">
                            <div class="user-project-card-image-container">
                                <div class="container-banner-project">
                                    <img src="/assets/images/sbs_white.png" class="banner-project-sbs">
                                    <img src="{{ projects[1][i].banner_image }}" class="banner-project-image"
                                         alt="Image du projet">
                                </div>
                                <h4 class="project-title"><strong>{{ projects[1][i].title|capitalize }}</strong></h4>
                            </div>
                            <div class="user-project-card-content">
                                <p>{{ projects[1][i].description }}</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        {% else %}
            {% if projects[1]|length > 1 %}
                {% for i in 1 .. projects[1]|length -1 %}
                    <div class="carousel-item">
                        <a href="/Project/show/{{ projects[1][i].id }}" class="user-project-card aProfilName">
                            <div class="user-project-card-image-container">
                                <div class="container-banner-project">
                                    <img src="/assets/images/sbs_white.png" class="banner-project-sbs">
                                    <img src="{{ projects[1][i].banner_image }}" class="banner-project-image"
                                         alt="Image du projet">
                                </div>
                                <h4 class="project-title"><strong>{{ projects[1][i].title|capitalize }}</strong></h4>
                            </div>
                            <div class="user-project-card-content">
                                <p>{{ projects[1][i].description }}</p>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            {% endif %}
        {% endif %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
       data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
       data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
