{% extends 'layout.html.twig' %}

{% block title %}{{ info.0.first_name }}{% endblock %}




{% block content %}
    <div class="container">
        <form method="POST" action="/profil/updateuser/{{ info.0.id }}" enctype="multipart/form-data">
            <div class="form-group">
                <input type="text" class="form-control" id="first_name" placeholder="Prenom" name="first_name"
                       value="{{ info.0.first_name }}">
                {% if errors.first_name is defined %}
                    <span style="color: red">{{ errors.first_name }}</span>
                {% endif %}
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="last_name" placeholder="Nom" name="last_name"
                       value="{{ info.0.last_name }}">
                {% if errors.last_name is defined %}
                    <span style="color: red">{{ errors.last_name }}</span>
                {% endif %}
            </div>
            <div class="form-group">
                <input type="email" class="form-control" id="email" placeholder="Email" name="email"
                       value="{{ info.0.email }}">
                {% if errors.email is defined %}
                    <span style="color: red">{{ errors.email }}</span>
                {% endif %}
            </div>
            <div class="form-group">
                <input type="text" class="form-control" id="zip_code" placeholder="Code Postal" name="zip_code"
                       value="{{ info.0.zip_code }}">
                {% if errors.zip_code is defined %}
                    <span style="color: red">{{ errors.zip_code }}</span>
                {% endif %}
            </div>
            <div class="form-group">
                <textarea class="form-control" id="description" rows="3" placeholder="Biographie"
                          name="description">{{ info.0.description }}</textarea>
            </div>
            <div class="form-group">
                <label for="exampleFormControlSelect2">Example multiple select</label>
                <select multiple class="form-control" id="exampleFormControlSelect2" name="skills[]">
                    {% for skill in allSkillsAvailable %}
                        <option value="{{ skill.id }}"
                                {% for skills in info %}
                                    {% if skill.id == skills.skill_id %}selected{% endif %}
                                {% endfor %}
                        >#{{ skill.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="profil_picture" name="profil_picture">
                    <label class="custom-file-label" for="profil_picture">Photo de profil</label>
                </div>
            </div>
            <div class="input-group mb-3">
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="banner_image" name="banner_image">
                    <label class="custom-file-label" for="banner_image">Image de banni√®re</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Poster</button>
        </form>
    </div>
{% endblock %}