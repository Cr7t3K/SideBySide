{% extends 'layout.html.twig' %}

{% block title %}{{ info.0.first_name }}{% endblock %}




{% block content %}
    <form method="POST" action="/profil/setuser/{{ info.0.user_id }}" enctype="multipart/form-data">
        <div class="form-group">
            <input type="text" class="form-control" id="first_name" placeholder="Prenom" name="first_name" value="{{ info.0.first_name }}">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="last_name" placeholder="Nom" name="last_name" value="{{ info.0.last_name }}">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="email" placeholder="Email" name="email" value="{{ info.0.email }}">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" id="zip_code" placeholder="Code Postal" name="zip_code" value="{{ info.0.zip_code }}">
        </div>
        <div class="form-group">
            <textarea class="form-control" id="description" rows="3" placeholder="Biographie" name="description" >{{ info.0.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect2">Example multiple select</label>
            <select multiple class="form-control" id="exampleFormControlSelect2" name="skills[]">
                {% for skill in allSkillsAvailable %}
                    <option value="{{ skill.id }}"
                            {% for skills in info %}
                                {% if skill.id == skills.skill_id %}selected{% endif %}
                            {% endfor %}
                    >#{{ skill.name }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="profil_img">
                <label class="custom-file-label" for="profil_img">Photo de profil</label>
            </div>
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="baner_image">
                <label class="custom-file-label" for="baner_image">Image de banni√®re</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Poster</button>
    </form>
{% endblock %}

