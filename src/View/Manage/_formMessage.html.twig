<div class="message-container col-md-7 col-lg-5">
    <h3 class="text-center">Laisser un message</h3>
    <div class="row h-100 justify-content-center align-items-center">
        <div class="col-11 col-md-7 col-lg-5">
            <form method="POST" action="" class="container-form">
                <div class="form-group">
                    <textarea class="form-control" id="message" name="message" rows="5"
                              placeholder="Votre message"></textarea>
                    {% if errors.plan is defined %}
                        <small class="invalid-auth">{{ errors.plan }}</small>
                    {% endif %}
                    <input type="hidden" id="author" name="author" value="{{ isConnected.id }}">
                    <input type="hidden" id="to_project" name="to_project" value="{{ project.id }}">
                </div>
                <div class="form-group">
                    <button class="btn btn-yellow-round" type="submit">Poster</button>
                </div>
            </form>
        </div>
    </div>
    {% for message in messages %}
        {% if message.author == isConnected.id %}
            <div class="message-container-myMsg col-11 col-md-7 col-lg-5">
                <div class="message-card">
                    <div><strong>{{ message.first_name }} {{ message.last_name }}</strong></div>
                    <p><small>{{ message.created_at }}</small></p>
                </div>
                <p>{{ message.message }}</p>
            </div>
        {% else %}
            <div class="message-container-users col-11 col-md-7 col-lg-5">
                <div class="message-card">
                    <div><strong>{{ message.first_name }} {{ message.last_name }}</strong></div>
                    <p><small>{{ message.created_at }}</small></p>
                </div>
                <p>{{ message.message }}</p>
            </div>
        {% endif %}
    {% endfor %}
</div>