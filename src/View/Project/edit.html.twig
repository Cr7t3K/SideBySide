{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container h-100">
        <h1 class="text-center">Modifier Mon Projet : {{ projects[currentProjectId].title }}</h1>
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 col-md-10 col-lg-8">

                <form method="POST" action="">
                    <div class="form-group">
                        <label for="inputTitle"></label>
                        <input type="text" class="form-control" id="inputTitle" name="title"
                               placeholder="Titre" value="{{projects.title }}">
                        <small class="text-danger">{% if errors is defined %}{{ errors.title }}{% endif %}</small>
                    </div>
                    <div class="form-group">
                        <label for="inputImage"></label>
                        <input type="text" class="form-control" id="inputImage" name="banner_image"
                               placeholder="Upload une image">
                    </div>
                    <div class="form-group">
                        <label for="inputDescribe">Description :</label>
                        <textarea class="form-control" id="inputDescribe" name="description" rows="5" >{{projects.description }}</textarea>
                        <small class="text-danger">{% if errors is defined %}{{ errors.description }}{% endif %}</small>
                    </div>
                    <div class="form-group">
                        <label for="inputZipCode"></label>
                        <input type="text" class="form-control" id="inputZipCode" name="zip_code"
                               placeholder="Code Postale" value="{{projects.zip_code }}">
                        <small class="text-danger">{% if errors is defined %}{{ errors.zip_code }}{% endif %}</small>
                    </div>
                    <div class="form-group">
                        <label for="inputPlan">Plan Du Projet : </label>
                        <textarea class="form-control" id="inputPlan" name="plan" rows="5">{{projects.plan }}</textarea>
                        <small class="text-danger">{% if errors is defined %}{{ errors.plan }}{% endif %}</small>
                    </div>
                    <div class="form-group">
                        <label for="inputCategory"></label>
                        <select class="form-control" id="inputCategory" name="category" >
                            <option value="">Choissisez votre Catégorie</option>
                            <option value="batiment">Batiment</option>
                            <option value="informatique">Informatique</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="inputSkill"></label>
                        <input type="text" class="form-control" id="inputSkill" name="skills"
                               placeholder="Compétences Recherché" value="{{projects.skills}}">
                    </div>
                    <div class="form-group">
                        <label for="inputTeam">A propos de l'équipe :</label>
                        <textarea class="form-control" id="inputTeam" name="team_description" rows="5" >{{projects.team_description }}</textarea>
                        <small class="text-danger">{% if errors is defined %}{{ errors.team_description }}{% endif %}</small>
                    </div>
                    <div class="form-group">
                        <label for="inputAvailable">Disponibilité du Projet</label>
                        <input type="date" class="form-control" id="inputAvailable" name="deadline" value="{{projects.deadline }}">
                        <small class="text-danger">{% if errors is defined %}{{ errors.deadline }}{% endif %}</small>
                    </div>

                    <button type="submit" class="btn btn-warning">Poster</button>
                </form>
            </div>
        </div>
    </div>

    <button type="button" class="btn btn-info"><a href="/Project/show/{{ currentProjectId }}">Retour</a></button>
{% endblock %}






