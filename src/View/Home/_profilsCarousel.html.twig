<div id="carouselExampleControls" class="carousel slide">
    <h3>Profils</h3>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="row">
                {% for i in 0..2 %}
                    {% if i < nbUsers %}
                        <div class="card profil-card col-4">
                            <a href="/Profil/user/{{ users[i].id }}">
                                <div class="profil-img-container">
                                    <img src="/assets/images/detective840x500.jpg"
                                         class="card-img-top profil-img"
                                         alt="Photo de profile">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ users[i].first_name }}</h5>
                                    <p class="card-text">
                                        {% for skill in skills %}
                                            {% if skill.user_id == users[i].id %}
                                                #{{ skill.name }}
                                            {% endif %}
                                        {% endfor %}
                                    </p>
                                </div>
                            </a>
                        </div>
                    {%  endif %}
                {% endfor %}
            </div>
        </div>
        {% for i in range(3, nbUsers, 3) %}
            <div class="carousel-item">
                <div class="row">
                    {% for ii in 0..2 %}
                        {% if (i + ii) < nbUsers %}
                        <div class="card profil-card col-4">
                            <a href="/Profil/user/{{ users[ii + i].id }}">
                                <div class="profil-img-container">
                                    <img src="/assets/images/detective840x500.jpg"
                                         class="card-img-top profil-img"
                                         alt="Photo de profile">
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ users[ii + i].first_name }}</h5>
                                    <p class="card-text">
                                        {% for skill in skills %}
                                            {% if skill.user_id == users[ii + i].id %}
                                                #{{ skill.name }}
                                            {% endif %}
                                        {% endfor %}
                                    </p>
                                </div>
                            </a>
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

