<div class="row">
    {% for project in projects %}
        <div class="card col-12 col-sm-12 col-md-6 col-lg-6" style="width: 18rem;">
            <a href="/Project/show/{{ project.id }}">
                <img src="/assets/images/project_img.jpg/" class="card-img-top" alt="project-image">
                <div class="card-body">
                    <h5 class="title">{{ project.title }}</h5>
                    <div class="collapse" id="collapseDescription{{ project.id }}">
                        <div class="card card-body">
                            {{ project.description }}
                        </div>
                    </div>
                </div>
            </a>
            <p>
                <button class="btn" type="button" data-toggle="collapse"
                        data-target="#collapseDescription{{ project.id }}" aria-expanded="false"
                        aria-controls="collapseDescription">
                    En savoir plus..
                </button>
            </p>
        </div>
    {% endfor %}
</div>